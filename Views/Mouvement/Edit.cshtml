@model MonNameSpaceGestionCourrier.Models.MouvementCourrier

<h2>Modifier le mouvement de courrier</h2>

@using (Html.BeginForm("Edit", "Mouvement", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.CourrierId)
        @Html.DropDownListFor(model => model.CourrierId, ViewBag.Courriers as SelectList, "-- SÃ©lectionner un courrier --", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Statut)
        @Html.TextBoxFor(model => model.Statut, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Acteur)
        @Html.TextBoxFor(model => model.Acteur, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DateMouvement)
        @Html.TextBoxFor(model => model.DateMouvement, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Nom_depositaire)
        @Html.TextBoxFor(model => model.Nom_depositaire, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer</button>
}
