@model MonNameSpaceGestionCourrier.Data.Courrier

<h2>Create New Courrier</h2>

@using (Html.BeginForm("Create", "Courrier", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Objet)
        @Html.TextBoxFor(model => model.Objet, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DateArrivee)
        @Html.TextBoxFor(model => model.DateArrivee, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Expediteur)
        @Html.TextBoxFor(model => model.Expediteur, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Destinataire)
        @Html.TextBoxFor(model => model.Destinataire, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Urgent_O_N)
        @Html.TextBoxFor(model => model.Urgent_O_N, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
}
